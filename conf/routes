GET     /ch/swagger.json                            controllers.ApiHelpController.getResources
GET     /swagger.json?lang=en                       controllers.ApiHelpController.getResources
GET     /swagger.json?lang=fr                       controllers.ApiHelpController.getResources


GET     /application                                controllers.Application.listProjects
PUT     /application/projects/:name                 controllers.Application.createProject(name: String)
GET     /application/projects/list                  controllers.Application.listProjects
GET     /application/projects/:id                   controllers.Application.projects(id: Long)
PUT     /application/projects/:id/:name             controllers.Application.addTaskToProject(name: String, id: Long)
PATCH   /application/tasks/:id                      controllers.Application.modifyTask(id: Long, color:Option[String] = None)
DELETE  /application/projects/:name                 controllers.Application.delete(name: String)


GET     /public/swagger/dist/*file                         controllers.Assets.at(path ="/public/swagger/dist",file)
